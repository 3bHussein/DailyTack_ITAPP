@model IEnumerable<WebApplication1.Models.absenceTb>

@{
    ViewBag.Title = "Index";
}
<html dir="rtl">


<p>
    @Html.ActionLink("Create New Absence", "Create")
</p>
<table class="table" style="text-align:right">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataOfDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataOfDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-warning" })
                @if (User.Identity.IsAuthenticated)
                {
                    @:  |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })

                }

            </td>
        </tr>
    }

</table>
</html>