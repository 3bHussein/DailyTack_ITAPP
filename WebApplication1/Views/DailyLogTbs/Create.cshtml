                @Html.TextAreaFor(model => model.Satement, new { htmlAttributes = new { @class = "form-control col-md-2"} })
                @Html.ValidationMessageFor(model => model.Satement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
